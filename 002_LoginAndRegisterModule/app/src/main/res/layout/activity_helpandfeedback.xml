<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#293340">
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#232c37"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/iv_back_selector"
            android:clickable="true"
            android:onClick="onClick"
            android:padding="20dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="32dp"
            android:text="@string/help_feedback"
            android:textColor="#ffffff"
            android:textSize="16dp" />
    </LinearLayout>
    <ImageView
        android:layout_marginTop="120dp"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_logo"/>
    <TextView
        android:layout_marginTop="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网夫控 VIAHOLD 1.0"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:layout_gravity="center"/>
    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="爱世港有限公司 版权多有"
        android:textSize="12dp"
        android:textColor="#ffffff"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Copyright c 2016-20XX All Rights Reserved."
        android:textColor="#ffffff"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:id="@+id/line1"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#3c4655"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textColor="#0ad9b2"
            android:textSize="16dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="53dp"
            android:layout_marginStart="53dp" />
        <View
            android:id="@+id/line2"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="#3c4655"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助"
            android:textColor="#0ad9b2"
            android:textSize="16dp"


            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/line2"
            android:layout_toEndOf="@+id/line2"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp" />
    </RelativeLayout>



</LinearLayout>